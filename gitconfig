[alias]
  alias = !sh -c 'git config --get alias.$1' -
  b = branch
  ci = commit
  cia = commit --amend -C HEAD
  co = checkout
  com = checkout master
  cp = cherry-pick
  l = log --date=relative
  ll = !git l --stat
  rb = !grb
  repush = !git pull --rebase && git push
  st = status -sb
  staged = diff --cached
  stashed = "!for NAME in $(git stash list | cut -d : -f 1); do echo \"$NAME\"; git show \"$NAME\"; done"
  su = submodule update
  unstage = reset HEAD --
  web = instaweb --httpd=webrick
  who = shortlog -s --

[color]
  diff = auto
  status = auto
  branch = auto

[core]
  pager = less -rciM
  excludesfile = /Users/rick/.gitignore
  quotepath = false

